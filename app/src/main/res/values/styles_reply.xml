    <style name="KeepassDXStyle.Toolbar.Special.Reply" parent="KeepassDXStyle.Toolbar.Reply">
        <item name="toolbarStyle">@style/KeepassDXStyle.Toolbar.Widget.Special.Reply</item>
    </style>
